const ICONS_SIZE = 25
---

<main class="flex justify-center mt-20 my-30 gap-10">
    <div class="size-[100px] bg-white rounded-xl shrink-0 bg-contain bg-[url(/img/profile.jpg)]"></div>
    <div>
        <h1 class="text-3xl font-medium">Hi, I'm <span class="!font-extrabold !text-[#EBE52C]">Christian Josu√©</span></h1>
        <p class="my-5 text-gray-300">I'm a passionate full-stack web developer with over <span class="!text-[#EBE52C]">4 years</span> of experience. 
            <br/>Specialized in <span>PHP</span>, <span>JavaScript</span> and <span>MySQL</span>.
            <br/>I'm always learning and building.</p>
        <div class="flex items-center gap-3">
            <a href="https://github.com/christianjosue" target="_blank">
                <GithubOfficialIcon width={ICONS_SIZE} height={ICONS_SIZE} />
            </a>
            <a href="https://www.linkedin.com/in/christian-josu%C3%A9-fuentes-mu%C3%B1oz-a90985263/" target="_blank">
                <LinkedinIcon width={ICONS_SIZE} height={ICONS_SIZE} />
            </a>
            <a href="mailto:christianjosuefuentes@gmail.com" target="_blank">
                <img src="/img/mail-logo.svg" alt="mail icon">
            </a>
            <a href="" target="_blank">
                <img src="/img/curriculum.svg" alt="curriculum icon">
