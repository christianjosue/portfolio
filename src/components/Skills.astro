---
import TechStack from "./TechStack.astro"
import PhpIcon from "./icons/PhpIcon.astro"
import JavaScriptIcon from "./icons/JavaScriptIcon.astro"
import MySqlIcon from "./icons/MySqlIcon.astro"
import VueIcon from "./icons/VueIcon.astro";
import LaravelIcon from "./icons/LaravelIcon.astro";
import PythonIcon from "./icons/PythonIcon.astro";
import DockerIcon from "./icons/DockerIcon.astro";
import GitIcon from "./icons/GitIcon.astro";
import HtmlIcon from "./icons/HtmlIcon.astro"
import CssIcon from "./icons/CssIcon.astro"
import BashIcon from "./icons/BashIcon.astro"

const ICONS_SIZE = 32;
---
<section id="skills" class="mt-20">
    <h2 class="text-2xl font-medium mb-10">Skills</h2>
    <TechStack>
        <PhpIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <JavaScriptIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <MySqlIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <VueIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <LaravelIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <PythonIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <DockerIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <GitIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <HtmlIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <CssIcon width={ICONS_SIZE} height={ICONS_SIZE} />
        <BashIcon width={ICONS_SIZE} height={ICONS_SIZE} />
    </TechStack>
</section>